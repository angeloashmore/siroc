{
  "name": "@siroc/cli",
  "version": "0.1.0",
  "description": "Zero-config build tooling for Node",
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "javascript"
  ],
  "repository": "nuxt-contrib/siroc",
  "license": "MIT",
  "sideEffects": false,
  "bin": {
    "siroc": "bin/cli.js",
    "siroc-runner": "bin/runtime.js"
  },
  "files": [
    "dist/**/*",
    "!**/*.map"
  ],
  "scripts": {
    "build": "siroc build",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "test": "run-s test:*",
    "test:unit": "siroc test",
    "watch": "yarn build -w"
  },
  "dependencies": {
    "@siroc/core": "0.1.0",
    "@siroc/jest-preset": "0.1.0",
    "cac": "^6.5.10",
    "chalk": "^4.1.0",
    "consola": "^2.13.0",
    "fs-extra": "^9.0.1",
    "jiti": "^0.1.9",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1"
  },
  "tsd": {
    "directory": "test/tsd",
    "compilerOptions": {
      "rootDir": "."
    }
  }
}
